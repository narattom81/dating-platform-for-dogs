<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
        http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-3.8.xsd
">

    <changeSet id="CREATE BREEDS TABLE" author="narattom">
        <createTable tableName="BREEDS">
            <column name="BED_ID" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_BREEDS"/>
            </column>
            <column name="BRE_NAME" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="alter column name in breeds table" author="">
        <renameColumn tableName="BREEDS" oldColumnName="BED_ID" newColumnName="BRE_ID" columnDataType="int"/>
    </changeSet>
    <changeSet id="insert into table BREEDS" author="narattom">
        <insert tableName="BREEDS">
            <column name="BRE_NAME" value="Golden Retriever"/>
        </insert>
        <insert tableName="BREEDS">
            <column name="BRE_NAME" value="American Staffordshire Terrier"/>
        </insert>
        <insert tableName="BREEDS">
            <column name="BRE_NAME" value="German Shepherd Doger"/>
        </insert>
    </changeSet>
    <changeSet id="create profiles table" author="narattom" >
        <createTable tableName="profiles" schemaName="dating">
            <column name="pro_id" type="int" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="PK_PROFILES" />
            </column>
            <column name="pro_name" type="varchar(100)" >
                <constraints nullable="false" />
            </column>
            <column name="pro_bre_id" type="int" >
                <constraints nullable="true" />
            </column>
            <column name="PRO_HEIGHT" type="int" >
                <constraints nullable="true" />
            </column>
            <column name="PRO_WEIGHT" type="int" >
                <constraints nullable="true" />
            </column>
            <column name="PRO_DESCRIPTION" type="varchar(4000)" >
                <constraints nullable="true" />
            </column>
            <column name="PRO_IMAGE_URL" type="varchar(100)" >
                <constraints nullable="true" />
            </column>
        </createTable>
    </changeSet>
    <changeSet id="create profile primary index" author="narattom">
        <createIndex tableName="profiles" indexName="ix_pro_bre_id">
            <column name="pro_bre_id"></column>
        </createIndex>
    </changeSet>
    <changeSet id="create profile foreign key constraint" author="narattom">
        <addForeignKeyConstraint baseTableName="profiles" baseColumnNames="PRO_BRE_ID" constraintName="FK_PRO_BRE_ID" referencedTableName="breeds"
                                 referencedColumnNames="BRE_ID" />
    </changeSet>
</databaseChangeLog>